<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/conversation_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/user_icon_rounded" />

    <RelativeLayout
        android:id="@+id/conversation_textlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/White" >

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Paul Mallon"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/message_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/name_textview"
            android:text="This is an examp..."
            android:textColor="@color/Grey" />

        <TextView
            android:id="@+id/coversation_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/message_hint_textview"
            android:text="25/07/14"
            android:textColor="@color/Grey" />

        <TextView
            android:id="@+id/new_message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/name_textview"
            android:text="14"
            android:textColor="@color/PingPal" />
    </RelativeLayout>

</LinearLayout>